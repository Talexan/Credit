<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">userslist_form.userslist_form_data_source</item>
            <item name="deps" xsi:type="string">userslist_form.userslist_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Edit</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Talexan\UsersList\Block\Adminhtml\Edit\BackButton"/>
            <button name="delete" class="Talexan\UsersList\Block\Adminhtml\Edit\DeleteButton"/>
            <button name="reset" class="Talexan\UsersList\Block\Adminhtml\Edit\ResetButton"/>
            <button name="save" class="Talexan\UsersList\Block\Adminhtml\Edit\SaveButton"/>
            <button name="save_and_continue" class="Talexan\UsersList\Block\Adminhtml\Edit\SaveAndContinueButton"/>
        </buttons>
        <namespace>userslist_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>userslist_form.userslist_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="userslist_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="userslist/index/save"/>
        </settings>
        <dataProvider class="Talexan\UsersList\Model\DataProvider" name="userslist_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="user_form">
        <settings>
            <label/>
        </settings>
        <field name="id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">id</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>id</dataScope>
            </settings>
        </field>
        <field name="fname" sortOrder="10" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">fname</item>
                    <item name="disabled" xsi:type="boolean">true</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">First Name</label>
                <dataScope>fname</dataScope>
            </settings>
        </field>
        <field name="lname" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">lname</item>
                    <item name="disabled" xsi:type="boolean">true</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Last Name</label>
                <dataScope>lname</dataScope>
            </settings>
        </field>
        <field name="email" sortOrder="30" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">email</item>
                    <item name="disabled" xsi:type="boolean">true</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">E-mail</label>
                <dataScope>email</dataScope>
            </settings>
        </field>
    </fieldset>
</form>